<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="AppDialogTheme.Progress">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/gunmetal</item>
        <item name="fontFamily">@font/nanum_square_otf_regular</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nanum_square_otf_bold</item>
    </style>

    <style name="TextView.Title.Toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Contents">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/nanum_square_otf_bold</item>
    </style>

    <style name="TextView.Contents.Guide">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/brown_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/nanum_square_otf_regular</item>
    </style>

</resources>
